<% provide(:title, 'Phones') %><!--tab title-->
<br>
<h1>Mobile Phones</h1>
<hr>
<br>
<h2 class="subtit">All prices are shown in EUR.</h2>
<br>
<% @phones.each do |phone| %> 
<h3 class="subtit2"><%= phone.make %> <%= phone.model %> - Price: <%= phone.price %></h3>
<hr>
<h4 class="description"><%= phone.description %></h4>
        <%= link_to 'Show', phone, :class => "option" %> <%= link_to 'Edit', edit_phone_path(phone), :class => "option" %> <%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' }, :class => "option" %>
        <% end %>
<br>
<br>
        <%= link_to 'Add New Phone', new_phone_path, :class => "option" %> 
